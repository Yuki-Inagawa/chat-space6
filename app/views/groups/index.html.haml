.flash-box
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name
          = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            = link_to new_group_path do
              %i.fa.fa-edit
          %li.side-header__box__menu__edit-user
            = link_to edit_user_path(current_user) do
              %i.fa.fa-cog
    .groups
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
              message はまだありません         
          
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          グループ名
        %ul.main-header__left-box__member-list
          メンバー：
          %li.main-header__left-box__member-list__member メンバー名
      %a{:href => ""}
        .main-header__edit-btn Edit
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker  メンバー名
          %p.message__upper-info__date  2019/06/19
        .message__text   text
    .form
      %form#new_message.new_message{action: "",enctype: "multipart/form-data",method: "post"}
        %input(type="hidden")
        %input(type="hidden")
        .input-box
          %input#message_content.input-box__text{name: "message[content]", placeholder: "type a message", type: "text"}/
          %label.input-box__image(for="message_image")
            %i.fa.fa-image
            %input#message_image.input-box__image__file(type="file")
        %input.submit-btn{"data-disable-with": "Send", name: "commit", type: "submit", value: "Send"}/

